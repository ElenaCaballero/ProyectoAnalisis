<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Schedules</h1>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Time</th>
            <th>Room</th>
            <th>Course</th>
            <th>Student Count</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @schedules.each do |schedule| %>
            <tr>
              <td><%= schedule.time %></td>
              <td><%= schedule.room.number %></td>
              <td><%= schedule.course.name %></td>
              <td><%= schedule.students.count %></td>
              <td><%= link_to 'Show', schedule %></td>
              <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
              <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
  </div>
  <br>

  <button type="button" class="btn btn-default"><%= link_to 'New Schedule', new_schedule_path %></button>
</div>