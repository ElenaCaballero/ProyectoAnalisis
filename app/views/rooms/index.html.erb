<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Rooms</h1>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Number</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @rooms.each do |room| %>
            <tr>
              <td><%= room.number %></td>
              <td><%= link_to 'Show', room %></td>
              <td><%= link_to 'Edit', edit_room_path(room) %></td>
              <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <br>

  <button type="button" class="btn btn-default"><%= link_to 'New Room', new_room_path %></button>
</div>